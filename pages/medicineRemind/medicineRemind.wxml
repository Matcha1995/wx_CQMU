<view class="page">
  <view class="page__hd">
    <view class="page__hd-style">当前患者：{{patient}}</view>
  </view>
  <view class="page__bd">
        <view class="weui-panel">
            <view class="weui-panel__hd">开药提醒情况</view>
            <block class="weui-panel__bd" wx:for="{{list}}">
                <view class="weui-media-box weui-media-box_text"  data-item="item" data-index="{{index}}"  wx:key="list" bindlongpress='openConfirm'>
                    <view class="weui-media-box__desc">药品名称：{{item.Drugname}}</view>
                    <view class="weui-media-box__desc">提醒次数：</view>                    
                </view>
            </block>
        </view>
  </view>
</view>