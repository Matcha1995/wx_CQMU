.page{
  padding:0;
}
.weui-bar__item_on{
  color: #74BCF5;
}
.time-form_bg{
  width:100%;
  height:300rpx;
  background: linear-gradient(green,#1AAD19,rgb(107, 247, 94),white);
  /* background: #1AAD19; */
  opacity: 0.8;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  flex-direction: column;
}

.time-form_bg .time-form_content{
  width:80%;
  height:200rpx;
  margin-top:50rpx;
  background:white;
  border-radius: 10rpx;
  box-shadow: 0 8rpx 10rpx #ddd; 
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.time-form-table{
  font-size: 30rpx;
  color:#666;
  text-align: center;
  margin-top:20rpx;
  /* vertical-align: middle; */
}
.time-form-left{
  width:45%;
  height: 100rpx;
  /* background: blue; */
}
.time-form-center{
  width:10%;
  height: 70rpx;
  /* margin-top:30rpx; */
  /* background: orange; */
}
.time-form-right{
  width:45%;
  height: 100rpx;
  /* background:green; */
}
.time-form-text{
  font-size: 26rpx;
}
.time-form-picker{
  width:100%;
  height:80%;
  /* background: red; */
}
.weui-btn{
  width:300rpx;
  height:70rpx;
  line-height: 70rpx;
  margin-top:-50rpx;
  font-size: 32rpx;
  color:white;
  letter-spacing: 10rpx;
}

.page__hd-style{
  padding:15px;
  font-size:35rpx; 
}
.weui-panel__hd,.weui-media-box__desc{
  color:#666;
  font-size:30rpx;
}
.weui-media-box{
  border: 1px solid rgb(187, 215, 241);
  /* border-top: 1px solid #ccc; */
  box-shadow: 0 5rpx 10rpx #ccc;
  margin:15rpx;
  background:white;
}
