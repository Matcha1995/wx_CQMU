.container{
  width:100%;
  min-height: 100%;
  /* background: blue; */
  padding: 0;
}
.page-body{
  /* position:fixed; */
  width: 100%;
  z-index: -1;
}
.swiper-image{
  width:100%;
  /* opacity: 0.8; */
  overflow: hidden;
}
.content{
  z-index: 2;
  width:95%;
  height:800rpx;
  margin-top:-50rpx;
  box-shadow: 0 8rpx 10rpx #ddd; 
  background: white;
  opacity: 0.8;
}
.content .news-item{
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background:#ffffff;
  /* border-top: 1px solid #eee; */
  border-bottom: 1px solid #ccc;
  box-shadow: 0 5rpx 8rpx #ccc;
}
.news{
  padding: 10rpx 0 0 0;
}
.news-title{
  font-size: 28rpx;
  /* color:red; */
  font-weight: 600px;
  line-height: 40rpx;
}
.news-content{
  padding: 10rpx 0 0 0;
  /*height: 10rpx;*/
  font-size: 24rpx;
  line-height: 28rpx;
  color: #5b5b5b;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}


/* goTop回到顶部图标 */
.com-widget-goTop {
position: fixed;
bottom: 50px;
right: 5px;
background: rgba(0,0,0,0.48);
border-radius: 50%;
overflow: hidden;
opacity: 0.5;
z-index: 500;
}

.com-widget-goTop .icon-gotop{
background-color: rgba(0,0,0,0.8);
width: 45px;
height: 45px;
font-size: 12px;
color: #ffffff;
text-align: center;
border-radius: 50%;
}
.com-widget-goTop .icon-gotop image{
  width:20px;
  height:20px;
  margin-top:3px;
}
.com-widget-goTop .icon-gotop view{
  margin-top:-5px;
}


